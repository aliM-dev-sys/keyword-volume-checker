# Keyword Volume Checker Environment Variables
# Copy this file to .env and update with your actual values

# Data Source Configuration
GOOGLE_TRENDS_ENABLED=true
GOOGLE_TRENDS_TIMEOUT=10
GOOGLE_TRENDS_DELAY=1.0

AMAZON_AUTOCOMPLETE_ENABLED=true
AMAZON_AUTOCOMPLETE_TIMEOUT=10
AMAZON_AUTOCOMPLETE_DELAY=0.5

# API Settings
API_TIMEOUT=30
API_MAX_RETRIES=3
API_RATE_LIMIT_DELAY=0.1

# Cache Settings
CACHE_ENABLED=true
CACHE_TTL=86400
CACHE_DB_PATH=data/keyword_volumes.db

# Optional: Custom domain for production
# DOMAIN=keyword-checker.yourdomain.com
